@model IdentityMVCTest.Models.Post

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Post</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="UserId" class="form-control" type="hidden" value="@UserManager.GetUserAsync(User).Id" />
            </div>
            <div class="form-group">
                <input asp-for="BlogId" class="form-control" type="hidden" value="@ViewBag.BlogId" />
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContentBody" class="control-label"></label>
                <input asp-for="ContentBody" class="form-control" />
                <span asp-validation-for="ContentBody" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Created" class="form-control" type="hidden" value="@DateTime.Now.ToString()" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

